<LabeledImageShape>:

    id: lis
    label: label
    shape: shape
    pos: self.pos
    
    FloatLayout:
    
        Image:
            id: shape
            source: None if self.source=='' else self.source
            pos: lis.pos
        Label:
            id: label
            pos: lis.pos[0] + lis.label_offset[0], lis.pos[1] + lis.label_offset[1]
            size_hint_y: None
            height: self.texture_size[1]
        Scatter:
            do_scale: False
            do_translation: False
            do_rotation: False
            auto_bring_to_front: False
            size_hint: None, None
            size: lis.height, lis.width
            pos: lis.pos

<LabeledVectorShape>:

    id: lvs
    label: label
    points: self.points
    pos: self.pos
    size: self.size

    FloatLayout:
        id: layout
        canvas:
#            Color: 
#                rgba: lvs.fill_color
#            Triangle:
#                points: lvs.points
            Color: 
                rgba: lvs.stroke_color
            Line:
                id: perimeter
                points: lvs.points
                width: lvs.stroke_width
                joint: 'round'
                close: True
        AnchorLayout:
            pos: lvs.label_anchor_layout_pos
            #pos_hint: {'center_x':.5, 'center_y':.5}
            anchor_x: lvs.label_anchor_x
            anchor_y: lvs.label_anchor_y
            size_hint: None, None
            size: lvs.label_anchor_layout_size
#            canvas:
#                Color:
#                    rgba: .1, .3, .1, .51
#                Rectangle:
#                    size: self.size
#                    pos: self.pos
            Label:
                id: label
                #pos_hint: None, None
                pos: self.pos
                text: lvs.label_text
                size_hint: None, None
                size: 50, 30
                #size: lvs.size
                halign: lvs.label_halign
                valign: lvs.label_valign
        Scatter:
            do_scale: False
            do_translation: False
            do_rotation: False
            auto_bring_to_front: False
            size_hint: None, None
            size: lvs.height, lvs.width
            pos: lvs.pos
