<LabeledImageShape>:

    id: lis
    label: label
    shape: shape
    pos: self.pos
    
    FloatLayout:
    
        Image:
            id: shape
            source: None if self.source=='' else self.source
            pos: lis.pos
        Label:
            id: label
            pos: lis.pos[0] + lis.label_offset[0], lis.pos[1] + lis.label_offset[1]
            size_hint_y: None
            height: self.texture_size[1]
        Scatter:
            do_scale: False
            do_translation: False
            do_rotation: False
            auto_bring_to_front: False
            size_hint: None, None
            size: lis.height, lis.width
            pos: lis.pos

<AnchoredLabel>:
    label: label
    pos: root.label_anchor_layout_pos
    #pos_hint: {'center_x':.5, 'center_y':.5}
    anchor_x: root.label_anchor_x
    anchor_y: root.label_anchor_y
    size_hint: None, None
    size: root.label_anchor_layout_size
    Label:
        id: label
        #pos_hint: None, None
        pos: self.pos
        text: self.text
        size_hint: None, None
        size: self.size
        #size: root.anchor_widget.size

<LabeledVectorShape>:

    id: lvs
    #label: label
    points: self.points
    pos: self.pos
    size: self.size

    FloatLayout:
        id: layout
        canvas:
#            Color: 
#                rgba: lvs.fill_color
#            Triangle:
#                points: lvs.points
            Color: 
                rgba: lvs.stroke_color
            Line:
                id: perimeter
                points: lvs.points
                width: lvs.stroke_width
                joint: 'round'
                close: True
        Scatter:
            do_scale: False
            do_translation: False
            do_rotation: False
            auto_bring_to_front: False
            size_hint: None, None
            size: lvs.height, lvs.width
            pos: lvs.pos
