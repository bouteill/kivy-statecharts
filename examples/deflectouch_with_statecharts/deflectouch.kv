# Bullet description:
<Bullet>:
	source: 'graphics/bullet.png'
	size: 35 / (1200.0 / win.Window.height), 35 / (1200.0 / win.Window.height)
	size_hint: None, None


# Settings dialog description
<SettingsDialog>:
    music_slider: music_slider
    sound_slider: sound_slider
    speed_slider: speed_slider
    close_button: close_button
    
	orientation: 'vertical'
	padding: 10
	spacing: 10
	
	Label:
	    text: 'Music Volume:'
	Slider:
	    id: music_slider
	Widget:
        heigth: 5
    
    Label:
        text: 'Sound Volume:'
    Slider:
        id: sound_slider
	Widget:
        heigth: 5
    
    Label:
        text: 'Bullet Speed:'
    Slider:
        id: speed_slider
        range: 1, 10
	Widget:
	    heigth: 10
	
	BoxLayout:
	    spacing: 10
	
		Button:
		    text: 'Help'
		    bold: True
		    background_normal: 'graphics/button_normal.png'
            background_down: 'graphics/button_down.png'
		    font_size: 15
		    size_hint: 1, 1.5
		    #on_release: root.display_help_screen()
            on_release: root.statechart.send_event('show_help')
		    
		Button:
		    id: close_button
            text: 'Close'
            bold: True
            background_normal: 'graphics/button_normal.png'
            background_down: 'graphics/button_down.png'
            font_size: 15
            size_hint: 1, 1.5
            #on_press: root.dismiss_parent()
            on_press: root.statechart.send_event('close')


# Main widget description:
<GameScreen>:
	tank: tank
	background: background
    size: win.Window.size
	
	pos: self.pos
	
	Background:
	    id: background
		source: 'graphics/background.jpg'
		
	Image:
	    source: 'graphics/overlay.png'
        allow_stretch: True
        keep_ratio: False
        size: win.Window.size
	
	Image:
        source: 'graphics/rails.png'
        center_x: win.Window.width/20
        size_hint: None, None
        height: win.Window.height
	
	Tank:
		id: tank
		tank_image_source: 'graphics/tank.png'
		tower_image_source: 'graphics/tank_tower.png'
		center: win.Window.width/20, win.Window.center[1]
	
	BoxLayout:
	    orientation: 'vertical'
	    spacing: 15
	    padding: 20
	    
	    size: win.Window.width/8, win.Window.height/2.0
	    right: win.Window.width
	    top: win.Window.height
	
		Button:
			text: 'Fire'
			bold: True
			font_size: 17
			background_normal: 'graphics/button_normal.png'
            background_down: 'graphics/button_down.png'
			#on_press: root.fire_button_pressed()
            on_press: root.app.statechart.send_event('fire')
		
		Button:
			text: 'Reset'
			bold: True
			font_size: 17
			background_normal: 'graphics/button_normal.png'
            background_down: 'graphics/button_down.png'
			#on_press: root.reset_button_pressed()
            on_press: root.app.statechart.send_event('reset')
		
		Label:
	        text: 'Lives: ' + str(root.app.lives)
	        bold: True
	        font_size: 18
	        size_hint: 1, 0.5
	        color: 1, 1, 1, 1
	    
	    Button:
	        text: 'Level ' + str(root.app.level)
	        bold: True
	        font_size: 17
	        background_normal: 'graphics/button_normal.png'
            background_down: 'graphics/button_down.png'
	        #on_press: root.level_button_pressed()
            on_press: root.app.statechart.send_event('show_levels')
	    
	    Widget:
	        size_hint: 1, 0.5
		
		Button:
			text: 'Settings'
			bold: True
			font_size: 15
			background_normal: 'graphics/button_normal.png'
            background_down: 'graphics/button_down.png'
			#on_press: root.settings_button_pressed()
            on_press: root.app.statechart.send_event('show_settings')
		
		Button:
            text: 'Exit'
            bold: True
            font_size: 17
            background_normal: 'graphics/button_normal.png'
            background_down: 'graphics/button_down.png'
            on_press: root.app.statechart.send_event('stop')
